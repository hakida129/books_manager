extends ../layouts/common.pug

block content   
    h1.d-flex.align-items-center
        span.mr-3 User List
        a.btn.btn-primary(href="/users/add") New User
    table.table
            tr
                th Name
                th Phone
                th Delete
                th Update
            each user in users
                tr
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href="/users/" +user.id +"/delete") Delete
                    td 
                        a.btn.btn-light(href="/users/" +user.id + "/update") Update