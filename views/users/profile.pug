extends ../layouts/common.pug

block content    
    h2 Update user
    p Old Name: 
        span=user.name
    p Old Phone: 
        span=user.phone
    p Old Email: 
        span=user.email
    p Old Password: 
        span xxxx
    p Old avatar: 
        a.btn.btn-light(href="/users/" +user.id + "/profile/avatar") Update Avatar
    form(action="/users/profile" method="POST" )
        .form-group
            input(type="hidden" name="id", value=id)
        .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" value= values ? values.name : "")
        .form-group
            label(for="phone") Phone
            input.phone.form-control(type="text" name="phone" value= values ? values.phone : "")
        .form-group
            label(for="email") Email
            input.email.form-control(type="email" name="email" value= values ? values.email : "")
        .form-group
            label(for="password") Password
            input.password.form-control(type="password" name="password" value= values ? values.password : "")
    
            
        button(class="btn btn-primary mt-2") Update